pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                sh 'docker-compose build cdn'
            }
        }
        stage('Test') {
            steps {
                echo 'Test'
                sh 'docker run --rm --name cdn-app -d -p 6060:6060 tvup-cdn /usr/sbin/apache2ctl -D FOREGROUND'
                sh '/bin/nc -vz localhost 22'
                sh '/bin/nc -vz localhost 6060'
            }
            post {
                always {
                    sh 'docker stop `docker ps -a -q`'
                }
            }
        }
        stage('Push Registry') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'd6d0f54a-2cd6-4127-b2b3-d8a1c3a78536', passwordVariable: 'password', usernameVariable: 'user')]) {
                    sh 'docker tag tvup-cdn pmarsi/tvup-cdn:stable'
                    sh 'docker push pmarsi/tvup-cdn:stable'
                }
            }
        }
    }
}