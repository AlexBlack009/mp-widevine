pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                sh 'docker rm `docker ps -a -q`'
                sh 'docker-compose build cdn'
            }
        }
        stage('Test') {
            steps {
                sh '/bin/nc -vz localhost 6060'
                sh '/bin/nc -vz localhost 22'
            }
        }
        stage('Run') {
            steps {
                sh 'docker run -d -p 6060:6060 tvup-cdn /usr/sbin/apache2ctl -D FOREGROUND'
            }
        }
        stage('Push Registry') {
            steps {
                sh 'docker tag tvup-cdn tvup-cdn:stable'
            }
        }
    }
}